  height:50rpx;
  background-color: white;
  border-radius: 10rpx;
  justify-content: center;
  line-height: 50rpx;
  font-size:26rpx;
  color: #C0C0C0;
  margin:0  20rpx 20rpx 0;
  padding: 0 30rpx 0 30rpx;
}
.searchword{
  width:100%;
  height:100rpx;
  margin:20rpx 0 20rpx 0;
  display:flex; 
  align-items: center;
