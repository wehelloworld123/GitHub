page{background-color: rgb(243,243,243)}

.page_code{
  height:100%;
  display: flex;
  align-items: center;
}
.page_input_class{
  width:100%;
  height:100%;
  display: flex;
  align-items: center;

}
.scanhistory{
  margin:50rpx 2% 20rpx 2%;
  display: flex;
  justify-content: space-between; 
}

