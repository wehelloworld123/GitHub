.mapinfo{
  position: fixed;
  z-index: 100;
  bottom: 0;
  width:100%;
  background-color: white;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.mapinfo_title{
  width:100%;
  height:100rpx;
  border-bottom: 4rpx solid rgb(240,240,240);
  display: flex;
  justify-content: space-between;

}
.mapinfo_info{
  display: flex;
  width:94%;
  height:120rpx;
  margin:0 0 0 3%;
  border-bottom: 2rpx solid rgb(240,240,240);
  justify-content: space-between;
  align-items: center;
}
.mapinfo_info_icon{
  display:flex;
  justify-content: center;
  align-items: center;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: rgb(230,230,230);
 

}

.mapinfo_button{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%-20rpx;
  height:100rpx;
  padding: 0 20rpx 30rpx 20rpx; 
}