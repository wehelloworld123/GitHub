/* pages/eventdetails/eventdetails.wxss */
.event-detail{
  width: 100%;
  display: flex;
  flex-direction: row;

}
.eventtitle-intro{
  width: 100%;
  height: 60rpx;
  padding: 2% 0 0 0;
  border-bottom: solid 1rpx #F0F0F0;
  margin-bottom: 2%;
}
.event-number{
  width: 50%;
  height: 100rpx;
 color: #A9A9A9;
  padding-top: 25rpx;
}
.eventtitle-line{
  font-size:38rpx;
  border-bottom-style: solid;
  border-bottom-color:#999;
  border-bottom-width: 1rpx;
  padding-bottom: 20rpx;
  margin: 20rpx 15rpx 0 15rpx;

  padding-top: 2%;
}
.event-rule{
  margin: 20rpx 15rpx 0 15rpx;
  padding-bottom: 20rpx;
}
.event-content{
  width: 100%;
  min-height:240rpx;
  background-color: antiquewhite;
  margin-top: 10rpx;
}
.initiator{
  width: 100%;
  height:60rpx;
  background-color: antiquewhite;
  margin-top: 10rpx;
  padding: 3% 0 0 3%;
  color: #977C00;
}

.detai-decline{
  border-bottom: solid 1rpx #999;
  padding: 2% 0  1% 0;
}
.flex-a{
  display: flex;
  justify-content: center;
  font-size: 34rpx;
  color:#A9A9A9;
}
.asidery{
  width: 100%;
  margin-left: 1%;
  margin-right: 1%;
}